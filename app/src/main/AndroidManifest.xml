<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trimit.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.signup.SignupNameActivity"
            android:exported="true"/>
        <activity android:name=".ui.signup.SignupEmailActivity" />
        <activity android:name=".ui.signup.SignupPasswordActivity" />
        <activity
            android:name=".ui.signup.SignupBirthdayActivity"
            android:exported="true" />
        <activity
            android:name=".ui.signup.SignupBarberActivity"
            android:exported="true" />
        <activity
            android:name=".ui.signup.SignupGenderActivity"
            android:exported="true" />
        <activity
            android:name=".ui.PasswordResetActivity"
            android:exported="true" />
        <activity
            android:name=".ui.BottomBarActivity"
            android:exported="true" />
        <activity
            android:name=".ui.barber.BarberActivity"
            android:exported="true" />
    </application>
</manifest>