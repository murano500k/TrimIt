<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trimit.android.ui.barber.BarberDetailsFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include
            layout="@layout/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/img_barbershop_photo"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/img_map" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_profile"
            app:layout_constraintTop_toBottomOf="@+id/img_barbershop_photo"
            app:layout_constraintBottom_toBottomOf="@+id/img_barbershop_photo"

            app:civ_border_color="@color/colorBarIconWhite"
            app:civ_border_width="6dp"
            />

        <ImageView
            android:id="@+id/img_stars"
            android:layout_width="96dp"
            android:layout_height="19dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_profile"
            app:srcCompat="@drawable/img_stars_0" />


        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:text="Joe"
            android:textColor="@color/colorBarIconDark"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_stars" />

        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="test"
            android:textColor="@color/colorBarIconDark"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_name" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="192dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="25dp" />

        <ImageView
            android:id="@+id/img_example_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_address"
            app:layout_constraintRight_toLeftOf="@+id/guideline4"
            app:layout_constraintBottom_toBottomOf="@+id/img_example_4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/img_example_2"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/text_address"
            app:layout_constraintRight_toLeftOf="@+id/guideline5"
            />

        <ImageView
            android:id="@+id/img_example_3"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_address"
            app:layout_constraintLeft_toLeftOf="@+id/guideline5" />

        <ImageView
            android:id="@+id/img_example_4"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/img_example_2"
            app:layout_constraintRight_toLeftOf="@+id/guideline5" />

        <ImageView
            android:id="@+id/img_example_5"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_example_3"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintLeft_toLeftOf="@+id/guideline5" />

        <ImageView
            android:id="@+id/img_map"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_example_1"
            app:srcCompat="@drawable/img_map"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp" />

        <TextView
            android:id="@+id/text_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_reviews"
            android:textColor="@color/colorBarIconDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_map"
            app:layout_constraintRight_toLeftOf="@+id/img_stars_review"
            android:layout_marginRight="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp" />
        <ImageView
            android:id="@+id/img_stars_review"
            android:layout_width="96dp"
            android:layout_height="19dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_map"
            app:srcCompat="@drawable/img_stars_0"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:background="@color/cardview_dark_background"
            app:layout_constraintBottom_toTopOf="@+id/text_tos"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/text_tos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:text="@string/title_profile_tos"
            android:textColor="@color/colorBarIconDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_stars_review"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <include
            layout="@layout/btn_book_now"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_tos"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"

            />


    </android.support.constraint.ConstraintLayout>

</ScrollView>